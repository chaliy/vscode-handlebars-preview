{
  "name": "handlebars-preview",
  "displayName": "Handlebars Preview",
  "description": "Live preview for Handlebar templates",
  "version": "1.3.2",
  "publisher": "erickisos",
  "license": "MIT",
  "engines": {
    "vscode": "^1.69.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/erickisos/vscode-handlebars-preview"
  },
  "galleryBanner": {
    "color": "#0F6378",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Handlebars",
    "Live Preview"
  ],
  "activationEvents": [
    "onCommand:handlebars.preview",
    "onCommand:handlebars.loadPartials"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "handlebars.preview",
        "title": "Handlebars: Open Preview"
      },
      {
        "command": "handlebars.loadPartials",
        "title": "Handlebars: Load Partials"
      }
    ],
    "keybindings": [
      {
        "command": "handlebars.preview",
        "key": "ctrl+k h",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Handlebars Preview",
      "properties": {
        "handlebars.partials": {
          "type": "array",
          "description": "List of partial files to load",
          "items": {
            "type": "string",
            "default": []
          }
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "command": "handlebars.preview",
          "when": "resourceLangId == handlebars",
          "group": "Handlebars"
        }
      ],
      "editor/title/context": [
        {
          "command": "handlebars.preview",
          "when": "resourceLangId == handlebars",
          "group": "Handlebars"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production --devtool hidden-source-map",
    "watch": "webpack --mode development --watch --info-verbosity",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.6",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vsce": "^2.10.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "handlebars": "^4.7.7"
  }
}
